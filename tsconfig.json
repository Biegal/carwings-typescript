{
    "compilerOptions": {
        "lib": ["es2015"],
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": false,
        "outDir": "./dist/types",
        "downlevelIteration": true,
        // "strict": true,
        // "alwaysStrict": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true
    },
    "include": ["./src/**/*"],
    "exclude": ["src/**/*.spec.ts", "src/client.ts", "node_modules"],
    "typeRoots": ["node_modules/@types"]
}
